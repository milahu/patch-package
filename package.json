{
  "name": "patch-package",
  "version": "6.4.11",
  "description": "Fix broken node modules with no fuss",
  "main": "dist/index.js",
  "repository": "github:milahu/patch-package",
  "homepage": "https://github.com/milahu/patch-package",
  "author": "David Sheldrick",
  "license": "MIT",
  "engines": {
    "npm": ">5"
  },
  "bin": {
    "patch-package": "./index.js"
  },
  "scripts": {
    "prepublishOnly": "npm run clean && npm run build",
    "build": "tsc --project tsconfig.build.json",
    "new-integration-test": "ts-node integration-tests/newIntegrationTest.ts",
    "clean": "rimraf dist patch-package.test*.tgz",
    "format": "prettier --no-semi --write --trailing-comma=all src{/**,}/*.ts integration-tests{/**,}/*.ts property-based-tests{/**,}/*.ts",
    "prepack": "rimraf dist/**/*.test.js",
    "test": "./run-tests.sh",
    "bt": "npm run build && npm run test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit && lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "tslint -c tslint.json -p tsconfig.json",
      "prettier --no-semi --trailing-comma=all --list-different"
    ]
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    },
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "/(src|property-based-tests)/.+\\.test\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "devDependencies": {
    "@types/app-root-path": "^1.2.4",
    "@types/cross-spawn": "^6.0.2",
    "@types/fs-extra": "^9.0.13",
    "@types/is-ci": "^3.0.0",
    "@types/jest": "^27.4.1",
    "@types/klaw-sync": "^6.0.1",
    "@types/mock-fs": "^4.13.1",
    "@types/node": "^17.0.23",
    "@types/rimraf": "^3.0.2",
    "@types/semver": "^7.3.9",
    "@types/tmp": "^0.2.3",
    "@types/yarnpkg__lockfile": "^1.1.5",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "jest-haste-map": "^27.5.1",
    "jest-resolve": "^27.5.1",
    "js-yaml": "^4.1.0",
    "lint-staged": "^12.3.7",
    "mock-fs": "^5.1.2",
    "np": "^7.6.1",
    "prettier": "^2.6.2",
    "randomstring": "^1.2.2",
    "ts-jest": "^27.1.4",
    "ts-node": "10.7.0",
    "tslint": "^5.20.1",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "@types/dashdash": "^1.14.1",
    "@yarnpkg/lockfile": "^1.1.0",
    "chalk": "^2.4.2",
    "cross-spawn": "^7.0.3",
    "dashdash": "^2.0.0",
    "find-yarn-workspace-root": "^2.0.0",
    "fs-extra": "^10.0.1",
    "is-ci": "^3.0.1",
    "klaw-sync": "^6.0.0",
    "open": "^8.4.0",
    "rimraf": "^3.0.2",
    "semver": "^7.3.7",
    "shlex": "^2.1.0",
    "slash": "^2.0.0",
    "tmp": "^0.2.1"
  },
  "files": [
    "index.js",
    "dist/**/*.js",
    "CHANGELOG.md",
    "LICENSE",
    "patch-package-banner.png",
    "README.md"
  ]
}
